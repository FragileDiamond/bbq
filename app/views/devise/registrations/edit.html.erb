<h2><%= I18n.t('title.form.edit_profile') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control', autofocus: true,
      autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: 'form-control',
      placeholder: I18n.t('form_text.leave_blank'),
      autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>(<%= @minimum_password_length %>
        <%= I18n.t('form_text.password_validation') %>)</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control',
      placeholder: I18n.t('form_text.leave_blank'), autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, class: 'form-control',
      autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t('buttons.update'), class: 'btn btn-primary' %>
  </div>
<% end %>

<h3><%= I18n.t('title.form.cancel_account') %></h3>

<p>
  <%= I18n.t('form_text.unhappy?') %>
  <%= button_to I18n.t('buttons.cancel_account'),
  registration_path(resource_name), class: 'btn btn-danger',
    data: { confirm: I18n.t('words.are_you_sure') },
  method: :delete %>
</p>

<%= link_to "Back", :back %>

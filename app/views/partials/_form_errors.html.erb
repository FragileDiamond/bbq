<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger">
    <button class="btn-close" data-dismiss="alert" >X</button>
    <div class="lead buffer-bottom">
      <%= I18n.t('error.saving_failed_due_to') %>
      <%= I18n.t :error, count: errors.count %>
    </div>

    <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
